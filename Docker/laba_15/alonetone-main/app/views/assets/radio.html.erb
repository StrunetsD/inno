<nav class="sub_nav">
  <div class="page_container sub_nav_inner" data-controller="subnav" data-action="resize@window->subnav#resize">
      <ul>
        <%= navigation_item 'Latest Uploaded', radio_home_path %>
        <%= navigation_item 'Most Popular', radio_source_home_path('popular') %>
        <%= navigation_item 'Most Favorited', radio_source_home_path('most_favorited') %>
        <%= navigation_item 'Recently Favorited', radio_source_home_path('favorites') %>
        <% if logged_in? %>
        <%= navigation_item 'Mangoz Shuffle', radio_source_home_path('mangoz_shuffle') %>
        <%= navigation_item 'From Those You Follow', radio_source_home_path('those_you_follow') %>
        <% end %>
      </ul>
  </div>
</nav>


<div id="radio_content">
    <h1>alonetone radio: <%= params[:source].humanize %> </h1>
    <h1 class="mobile_only"><%= params[:source].humanize %></h1>
    <div class="mini_paginator top_paginator">
      <%== pagy_nav @pagy %>
    </div>
    <div id="radio_tracks" class="box">
      <%= render partial: 'assets/asset', collection: @assets, layout: 'normal_playback'  %>
    </div>
    <div class="mini_paginator bottom_paginator">
      <%== pagy_nav @pagy %>
    </div>
</div>